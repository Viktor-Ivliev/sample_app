<% provide(:title, 'Баннеры') %>
<p id="notice"><%= notice %></p>

<h1>Все блоки</h1>

<div class="ClientsCss" >
  <table >
    <tr>
      <td class="FIO_NAME">
        Название
      </td>
      <td >
        Категория
      </td>
    </tr>


    <% @blocks.each do |block| %>
        <tr>
          <td><%= block.name %></td>
          <td><%= Categori.find(block.categori_id).name %></td>
          <td class="btn-see"><%= link_to  image_tag("http://s1.iconbird.com/ico/2013/9/452/w514h3201380476829eye.png"),block, class:"btn-see"%></td>
          <td class="btn-see"><%= link_to image_tag("http://sombrinha.net/studiocomciencia.com/images/pencil.png"), edit_block_path(block), class:"btn-see" %></td>
          <td class="btn-see"><%= link_to image_tag("http://remont.vividnv.ru/media.lpgenerator.ru/images/167038/w448h5121380477116trash.png"), block, method: :delete, data:  { confirm: 'Вы уверены?' }, class:"btn-see" %></td>
        </tr>
    <% end %>
  </table>
</div>

<br>

<%= link_to 'Новый блок', new_block_path, class:"btn" %>
