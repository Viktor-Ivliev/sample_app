<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label :name %><br>
    <%= f.text_field :name %>


    <%= f.label :date_order %><br>
    <%= f.date_select :date_order %>


    <%= f.label :client_id %><br>
    <%= f.collection_select(:client_id, @client_all, :id, :name ) %>

    <%= f.label :service_id %><br>
    <%= f.text_field :service_ids, 'data-pre' =>@order.services.map(&:attributes).to_json %>

    <%= f.label :info %><br>
    <%= f.text_field :info %>

    <%= f.submit %>

<% end %>
<script type="text/javascript">
    $(function() {
        $("#order_service_ids").tokenInput("/services.json", {
            crossDomain: false,
            prePopulate: $("#order_service_ids").data("pre")
        });
    });
</script>