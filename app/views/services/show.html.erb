<% if signed_in? %><% provide(:title, 'Создание заказа') %>
    <% provide(:title, 'Просмотр услуг') %>
    <h1 class="zagolovki" >Просмотр услуг</h1>
    <p>
      <strong>Название услуги:</strong>
      <%= @service.name %>
    </p>

    <p>
      <strong>Описание услуги:</strong>
      <%= @service.comment %>
    </p>
    <p>
      <strong>Категория услуги:</strong>
      <%= @service.categori.name %>
    </p>

    <%= link_to 'Редактировать', edit_service_path(@service) , class:"btn"%> |
    <%= link_to 'Назад', services_path, class:"btn"%>
<% else %>
    <h1>Добро пожаловать</h1>

    <h2>
      Программа предозначена для удобной работы сотрудников компании
    </h2>
    <%= link_to "Зарегистрироваться", signup_path , class: "btn btn-large btn-primary" %> |
    <%= link_to "Войти", signin_path , class: "btn btn-large btn-primary" %>
<% end %>

